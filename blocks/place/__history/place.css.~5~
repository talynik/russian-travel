    grid-template-columns: 440px 460px;
    grid-gap: 48px 40px;
  } 
}

@media screen and (max-width: 768px) {
    /* стили для планшета */
  .place {
    grid-template-columns: 340px 352px;
    grid-gap: 48px 28px;
    padding: 0px 0px 72px 0px;
  } 
}

@media screen and (max-width: 320px) {
    /* стили для малого смартфона */
