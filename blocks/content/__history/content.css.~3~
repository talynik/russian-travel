/* Основной код для разрешения 1024px 
@media screen and (min-width: 1280px) {
    /* стили для больших настольных компьютеров и ноутбуков 
  .content {
    max-width: calc(1280px - 148px * 2);
    padding: 0px 148px 0px 148px;
  } 
}*/

@media screen and (max-width: 768px) {
    /* стили для планшета */
  .content {
    max-width: calc(768px - 24px * 2);
    padding: 0px 24px 0px 24px;
  }  
}

@media screen and (max-width: 320px) {
    /* стили для малого смартфона */
  .content {
    max-width: calc(320px - 16px * 2);
    padding: 0px 16px 0px 16px;
  } 
}